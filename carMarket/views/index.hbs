<html>

<head>
    <link href="../static/css/site.css" type="text/css" rel="stylesheet">
</head>

<body>
    <header>
        <ul>
            <li><img class="logo" src="../static/images/logo.png"></li>
            <li><a href="/">Browse</a></li>
            <li><a href="/create">Create</a></li>
            <li><a href="/about">About</a></li>
        </ul>
    </header>
    <main>
        <h1>Browser</h1>
        <form action="/" method="GET">

            <input type="text" class="search" name="search" placeholder="Search..." value="{{query.search}}">
            <input type="number" name="from" class="difficulty" placeholder="Price from..." value="{{query.from}}">

            <span>-</span>
            <input type="number" name="to" class="difficulty" placeholder="Price to..." value="{{query.to}}">
            <input type="submit" value="search">
        </form>

        <div id="cars">
            {{#each cars}}
            {{> carPreview}}
            {{else}}
            <p>No cars in database. <a href="/create">Create the first listing!</a></p>
            {{/each}}
        </div>
    </main>

    <script src="../app.js"></script>
</body>
</html>